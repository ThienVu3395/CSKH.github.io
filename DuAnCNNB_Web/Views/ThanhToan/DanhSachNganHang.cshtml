@{
    ViewBag.Header = "DANH SÁCH NGÂN HÀNG";
    ViewBag.Title = "DanhSachNganHang";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    ViewBag.status2 = "col-lg-9 col-md-12 mb-4";
}

<div class="bg-light post p-4" ng-controller="DanhSachCuaHang">
    <div class="container">
        <h2 class="text-center">TÌM CỬA HÀNG</h2>
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label for="sel1">Tên Cửa Hàng :</label>
                    <select class="form-control" id="sel1">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    <label for="sel1">Chọn Phường :</label>
                    <select class="form-control" id="sel1">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    <label for="sel1">Chọn Quận:</label>
                    <select class="form-control" id="sel1">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="btn btn-success container mb-4">Tìm Cửa Hàng</div> 

        <ul uib-pagination total-items="tongSoTrang"
            items-per-page="soCuaHangMoiTrang"
            ng-model="bigCurrentPage"
            previous-text="Trang Trước"
            next-text="Trang Kế"
            max-size="maxSize"
            class="pagination pagination-sm"
            boundary-link-numbers="true"
            ng-change="PhanTrang()">
        </ul>

        <div class="row" id="mapInfo">
            <div class="col-lg-3 col-md-3 col-sm-6 mb-4" ng-repeat="item in dsCuaHang">
                <div class="card">
                    <img src="https://static.mservice.io/img/logo-momo.png" width="100%" />
                    <div class="card-body text-center" style="min-height:250px">
                        <h5 class="card-title">{{item.MOTA}}</h5>
                        <p class="card-text">{{item.DIACHI}}</p>
                    </div>
                </div>
            </div>
        </div>

       <ul 
           uib-pagination total-items="tongSoTrang" 
           items-per-page="soCuaHangMoiTrang" 
           ng-model="bigCurrentPage" 
           previous-text="Trang Trước" 
           next-text="Trang Kế" 
           max-size="maxSize" 
           class="pagination pagination-sm" 
           boundary-link-numbers="true" 
           ng-change="PhanTrang()">
       </ul>
    </div>
</div>


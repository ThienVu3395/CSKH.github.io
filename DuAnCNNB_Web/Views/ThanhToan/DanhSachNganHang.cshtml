@{
    ViewBag.Header = "DANH SÁCH NGÂN HÀNG";
    ViewBag.Title = "DanhSachNganHang";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    ViewBag.status2 = "col-lg-9 col-md-12 mb-4";
}

<div class="container" ng-app="ThanhToan" ng-controller="DanhSachCuaHang" ng-init="layDanhSachCuaHang()">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Tìm Cửa Hàng...">
        <div class="input-group-append">
            <button class="btn btn-success">Tìm Kiếm</button>
        </div>
    </div>
    <div class="row" id="mapInfo">
        <div class="col-lg-4" ng-repeat="item in dsCuaHang">
            <iframe src="https://www.google.com/maps/embed?pb=" style="border:0" allowfullscreen="" width="100%" frameborder="0"></iframe>
            <div class="card-body">
                <h5 class="card-title">{{item.MOTA}}</h5>
                <p class="card-text">{{item.DIACHI}}</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 ">
            <nav role="navigation">
                <ul class="pagination custom-pagination pagination-lg">
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item ">
                        <a class="page-link " href="#">2</a>
                    </li>
                    <li class="page-item ">
                        <a class="page-link" href="#">3</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>



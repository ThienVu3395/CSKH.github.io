@{
    ViewBag.Header = "DANH SÁCH NGÂN HÀNG";
    ViewBag.Title = "DanhSachNganHang";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    ViewBag.status2 = "col-lg-9 col-md-12 mb-4";
}

<div class="bg-light post p-4" ng-controller="DanhSachCuaHang">
    <div class="container">
        <h2 class="text-center">TÌM CỬA HÀNG</h2>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="sel1">Chọn Phường:</label>
                    <select class="form-control" id="sel1">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <label for="sel1">Chọn Quận:</label>
                    <select class="form-control" id="sel1">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>
            </div>

            <div class="col-lg-12">
                <form action="#" class="sidebar-search">
                    <div class="form-group">
                        <span class="fa fa-search icon-search"></span>
                        <input type="text" class="form-control search-input" placeholder="Tìm cửa hàng...">
                    </div>
                </form>
            </div>
        </div>
        <div class="row" id="mapInfo">
            <div class="col-lg-4 col-md-4 col-sm-6 mb-4" ng-repeat="item in dsCuaHang">
                <div class="card">
                    <img src="https://static.mservice.io/img/logo-momo.png" width="100%" />
                    <div class="card-body text-center">
                        <h5 class="card-title">{{item.MOTA}}</h5>
                        <p class="card-text">{{item.DIACHI}}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <nav role="navigation">
                    <ul class="pagination custom-pagination pagination-lg">
                        <li class="page-item active" ng-repeat="item in hienThiDanhSachTrang()">
                            <a class="page-link" ng-click="phanTrang(item + 1)">{{item + 1}}</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

